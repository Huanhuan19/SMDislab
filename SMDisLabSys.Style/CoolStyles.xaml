                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="path1" Property="Stroke"  Value="#FFA415"/>
                            <Setter TargetName="path1" Property="Fill"  Value="#55934F1F"/>
                            <Setter TargetName="path2" Property="Stroke"  Value="#FFA415"/>
                            <Setter TargetName="path2" Property="Fill"  Value="#FFA415"/>
