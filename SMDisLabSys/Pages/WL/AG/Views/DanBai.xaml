<UserControl x:Class="SMDisLabSys.Pages.WL.AG.Views.DanBai"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMDisLabSys.Pages.WL.AG.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:convert="clr-namespace:SMDisLabSys.UIServer.DataConvert"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1500">
    <UserControl.Resources>
        <convert:VisibleToHidden x:Key="visibleToHidden"></convert:VisibleToHidden>
    </UserControl.Resources>
    <Grid Background="#f8fCf8">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="190"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="300"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Viewbox Height="28" Grid.Row="4" Grid.Column="1"  HorizontalAlignment="Left" Margin="-5,0,0,0">
            <RadioButton GroupName="DanBai" Command="{Binding LToGCommand}" IsChecked="True" Content="已知摆长求重力加速度" Style="{StaticResource RadioButton_Defaut}" Margin="10,0,0,0">
            </RadioButton>
        </Viewbox>
        <Viewbox Height="28" Grid.Row="4" Grid.Column="2"  HorizontalAlignment="Left" Margin="45,0,0,0">
            <RadioButton GroupName="DanBai" Command="{Binding GToLCommand}" Content="已知重力加速度求摆长" Style="{StaticResource RadioButton_Defaut}" Margin="10,0,0,0"></RadioButton>
        </Viewbox>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="当前单摆周期(s)" Style="{StaticResource TextBlock_Default}" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.RowSpan="2"  Style="{StaticResource TextBox_DefaultRadius}" Margin="15,5,5,35" Width="260" Text="{Binding Circle}"  FontSize="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" Grid.Column="2" Text="当前单摆角度(°)" Style="{StaticResource TextBlock_Default}" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource TextBox_DefaultRadius}" Margin="15,5,5,35" Width="260" Text="{Binding Angle}"  FontSize="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" />
        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ChartTitle}" Style="{StaticResource TextBlock_Default}" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <lvc:CartesianChart Grid.Row="1" Grid.Column="3" Grid.RowSpan="5" Margin="10 5 5 0" Hoverable="False" DisableAnimations="True" DataTooltip="{x:Null}" Foreground="White"
            Series="{Binding SeriesDic}" Zoom="None" Background="#FFf7f1" LegendLocation="None">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis LabelFormatter="{Binding XFormatter}" MinValue="{Binding Min}" MaxValue="{Binding Max}"
                          DisableAnimations="True" Title="L(m)" FontSize="25" 
          Foreground="{DynamicResource SolidColorBrush_8}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Visibility="Visible" Stroke="#aFB751" StrokeThickness="1" StrokeDashArray="3,10"/>
                    </lvc:Axis.Separator>

                </lvc:Axis>
            </lvc:CartesianChart.AxisX>

            <lvc:CartesianChart.AxisY>
                <lvc:Axis LabelFormatter="{Binding YFormatter}"  DisableAnimations="True" Title="{Binding YLineTitle}" FontSize="25"
      Foreground="{DynamicResource SolidColorBrush_8}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Visibility="Visible" Step="{Binding YStep}" Stroke="#aFB751"  StrokeThickness="1" StrokeDashArray="3,10"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <DataGrid Visibility="{Binding IsVisibleGridLToG}"  BorderThickness="2" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"  VerticalScrollBarVisibility="Disabled"  FontSize="12.5"
  IsReadOnly="True" CanUserSortColumns="False" Background="{x:Null}" Margin="5,20,0,5" 
          Style="{StaticResource  DataGDefault}"
           ColumnHeaderStyle="{StaticResource DataGridColumnHeaderDefault}" RowStyle="{StaticResource DataGridRowDefault}"
                       AutoGenerateColumns="False"     ItemsSource="{Binding LineDataSource}" SelectedItem="{Binding LineDataSelect}" AlternationCount="2" HorizontalContentAlignment="Left">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="摆长（m）" Width="165">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Width="120" Background="SkyBlue" Text="{Binding DanBaiLinelong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="单摆周期（s）"  Binding="{Binding DanBaiCircle}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="重力加速度g"  Binding="{Binding Zhonglig}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="单摆周期的平方"  Binding="{Binding DanBaiCircle2}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Visibility="{Binding IsVisibleGridLToG,Converter={StaticResource visibleToHidden}}" BorderThickness="2" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"  VerticalScrollBarVisibility="Disabled"  FontSize="12.5"
IsReadOnly="True" CanUserSortColumns="False" Background="{x:Null}" Margin="5,20,0,5" 
        Style="{StaticResource  DataGDefault}"
         ColumnHeaderStyle="{StaticResource DataGridColumnHeaderDefault}" RowStyle="{StaticResource DataGridRowDefault}"
                     AutoGenerateColumns="False"     ItemsSource="{Binding LineDataSource}" SelectedItem="{Binding LineDataSelect}" AlternationCount="2" HorizontalContentAlignment="Left">
            <DataGrid.Columns>
                <DataGridTextColumn Header="摆长（m）"  Binding="{Binding DanBaiLinelong}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="单摆周期（s）"  Binding="{Binding DanBaiCircle}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="重力加速度g" Width="165">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Width="120" Background="SkyBlue" Text="{Binding Zhonglig, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="单摆周期的平方"  Binding="{Binding DanBaiCircle2}" Width="165" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource StackPanel_Center}"  Margin="0,0,0,0" Height="60">
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding RecordDataCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="记录数据" Width="180"></Button>
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding ClearSelectCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="清除选择数据" Width="200"></Button>
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding TAndLCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="T和L" Width="160"></Button>
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding TTAndLCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="T²和L" Width="160"></Button>
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding ClearCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="清屏" Width="160"></Button>
            <Button Style="{StaticResource BtnInfoStyle2}" Command="{Binding ExplainCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Window}}}" VerticalAlignment="Center"
Margin="10,0,0,0" Content="实验说明" Width="200"></Button>
        </StackPanel>
    </Grid>
</UserControl>
