<Window x:Class="SMDisLabSys.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMDisLabSys.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/" 
        prism:ViewModelLocator.AutoWireViewModel="True"  WindowStyle="None"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" 
        Title="MainWindow" Height="1550" Width="1800">

    <Grid Background="{DynamicResource Background_Image_1}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="73"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="73"></RowDefinition>
            <RowDefinition Height="73"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="517"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="White" Text="{Binding MainTitle}" VerticalAlignment="Center" FontSize="30" Margin="10"></TextBlock>
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button HorizontalAlignment="Right" Margin="0 0 20 0" Cursor="Hand" ToolTip="关闭" Background="Transparent"
                       Content="X" FontSize="36" Height="50" Width="45" Click="Button_Click" RenderTransformOrigin="0.077,4.083"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Grid.Row="1" Grid.Column="2" Height="70" Width="200" Style="{StaticResource BtnInfoStyle}" Command="{Binding WLCommand}" VerticalAlignment="Bottom"
Margin="40,0,10,0" HorizontalAlignment="Left" >
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/SMDisLabSys.Style;component/Images/WL.png" Stretch="Uniform" />
                    </Button.Background>
                </Button>
                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource BtnInfoStyle}" Command="{Binding HXCommand}" VerticalAlignment="Bottom"
Margin="40,0,10,0" Height="70" Width="200"  HorizontalAlignment="Left" >
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/SMDisLabSys.Style;component/Images/HX.png" Stretch="Uniform" />
                    </Button.Background>
                </Button>
                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource BtnInfoStyle}" Command="{Binding SWCommand}" VerticalAlignment="Bottom"
Margin="40,0,0,0" Height="70" Width="200"  HorizontalAlignment="Left" >
                    <Button.Background>
                        <ImageBrush ImageSource="pack://application:,,,/SMDisLabSys.Style;component/Images/SW.png" Stretch="Uniform" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
